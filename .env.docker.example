# Docker Compose Environment Variables
# Copy this to .env.docker or set these in your shell environment

# PostgreSQL Configuration
POSTGRES_USER=swanytello
POSTGRES_PASSWORD=swanytello_password
POSTGRES_DB=swanytello
POSTGRES_PORT=5432

# Database URL (for application)
# This will be used by the application to connect to PostgreSQL
DATABASE_URL="postgresql://swanytello:swanytello_password@localhost:5432/swanytello?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"
JWT_ACCESS_EXPIRATION="15m"

# Server
PORT=3000
HOST=0.0.0.0

# Authentication (ON = enforce JWT, OFF = bypass for development)
AUTH_STATUS=OFF

# Node
NODE_ENV=development

